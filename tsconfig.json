{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2017"
    ],
    "outDir": "dist/npm",
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "declaration": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": false,
    "suppressImplicitAnyIndexErrors": false,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": [
    "custom_typings/**/*.ts",
    "src/**/*.ts"
  ]
}
